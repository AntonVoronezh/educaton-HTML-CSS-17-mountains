          .comments__form.form
            input(type="text", name="name" placeholder="Имя").form__input
            input(type="email", name="email" placeholder="Email").form__input
            textarea(name="text" placeholder="Ваше сообщение").form__textarea
            .form__wrap
              input(type="submit", value="Отправить").btn-works-item.form__submit
              input(type="reset", value="Очистить").btn-works-item.form__reset
